.row
  .col-md-4.col-md-offset-4

    %h1 Нов диапазон
    .well
      = simple_form_for(@hand, html: { class: 'form-horizontal form-new-edit' }) do |f|
        %fieldset
          = f.input :name, placeholder: 'Въведете диапазон ...'
          = f.input :priority, placeholder: 'Въведете приоритет ...'
          = f.association :position, prompt: 'Изберете позиция ...'
          = f.association :blind, prompt: 'Изберете брой блайндове ...'
          
          
          %p.buttons
            = f.button :submit, class: "btn btn-primary"
            = link_to "Back", {action: "index"}, class: "btn btn-default"